# LAIM - Lab Asset Inventory Manager
# Environment Configuration Template
# Copy this file to .env and customize values

# Database Configuration
POSTGRES_USER=laim
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=laim

# Application Settings
APP_NAME=LAIM
APP_ENV=production
APP_PORT=8000
SECRET_KEY=change_this_to_a_random_64_character_string

# Initial Superuser Account
SUPERUSER_USERNAME=superadmin
SUPERUSER_PASSWORD=ChangeMeInProduction!
SUPERUSER_EMAIL=admin@yourdomain.com

# Netdisco API Configuration
NETDISCO_API_URL=https://netdisco.example.com
NETDISCO_USERNAME=api_user
NETDISCO_PASSWORD=secret

# LibreNMS API Configuration
LIBRENMS_API_URL=https://librenms.example.com
LIBRENMS_API_TOKEN=your_api_token_here

# Device Sync Settings
SYNC_INTERVAL_HOURS=6
SYNC_ENABLED=true
SYNC_RATE_LIMIT=10
